<div class="messages">
  <p>
    <strong>
        <%= message.user.firstname %>
        <%= message.user.lastname %>    
    :</strong>
    <span class="msg-text">
      <%= message.body %>
    </span>
    
  </p>
  
  <div class="like">
        <%= form_with(url: likes_path, method: "post") do %>
            <input type="hidden" name="like[likeable_id]" value="<%= message.id %>" autocomplete="off">
            <input type="hidden" name="like[user_id]" value="<%= current_user.id %>" autocomplete="off">
            <input type="hidden" name="commit" value="message" autocomplete="off">
            <%= image_submit_tag("thumb_up_black_24dp.svg") %>
        <% end %>

        <p class="count"><%= message.likes.count %></p>

        <div>
              <%= link_to message do %>  
                <%= image_tag "comment-text-multiple-outline.png", class: "comment_icon" %>
              <% end %>  
        </div>
        
        
  </div>

</div>
